	<Test name="Default">
		<Strategy class="Random"/>
		<!--<Agent ref="Local" platform="osx"/>-->
		<StateModel ref="TheState"/>
		<Publisher class="FilePerIteration">
   			<Param name="FileName" value="/Users/anto/myfuzzer/fuzzer/generated_samples_folder/fuzzed_{0}.wav" />
		</Publisher>
	</Test>


    <Run name="DefaultRun">
      <Test ref="Default"/>
		<Logger class="Filesystem">
        	<Param name="Path" value="logs" />
    	</Logger>
    </Run>  


</Peach>
